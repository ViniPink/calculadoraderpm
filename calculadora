<body>
    <div class="container">
        <h2>CALCULADORA DE RPM</h2>
        <label>Visualizações (Milhão):</label>
        <input type="number" id="visualizacoes" placeholder="Ex: 1">
        <label>% Qualificada:</label>
        <input type="number" id="qualificada" placeholder="Ex: 50">
        <label>RPM ($):</label>
        <input type="number" id="rpm" placeholder="Ex: 2">
        <button onclick="calcularRPM()">Calcular</button>
        <h3 id="resultado">Resultado: $0.00</h3>
    </div>
    
    <script>
        function calcularRPM() {
            let visualizacoes = parseFloat(document.getElementById("visualizacoes").value) || 0;
            let porcentagemQualificada = parseFloat(document.getElementById("qualificada").value) || 0;
            let rpm = parseFloat(document.getElementById("rpm").value) || 0;
            
            let resultado = (visualizacoes * 1_000_000) * (porcentagemQualificada / 100) * (rpm / 1000);
            
            document.getElementById("resultado").innerText = `Resultado: $${resultado.toFixed(2)}`;
        }
    </script>
